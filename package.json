{
  "name": "streamer-pronouns",
  "version": "1.0.0",
  "description": "Display pronouns on twitch channels",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:firefox": "web-ext run --source-dir dist/",
    "copy:manifest": "cp src/manifest.json dist/manifest.json",
    "copy:css": "cp src/style.css dist/style.css",
    "build:dev": "npm run copy:css && npm run copy:manifest && esbuild src/main.js --bundle --outfile=dist/bundle.js",
    "build": "npm run copy:css && npm run copy:manifest && esbuild src/main.js --bundle --minify --sourcemap --outfile=dist/bundle.js"
  },
  "author": "Y.Heckmann",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "0.20.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "web-ext": "^7.9.0"
  }
}
